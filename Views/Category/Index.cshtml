@model IEnumerable<FPTBook.Models.Category>

@{
    Layout = "~/Views/Shared/adminLO.cshtml";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <p>
        <a type="button" class="btn btn-primary mt-2" asp-action="Create">Create New</a>
    </p>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            List of Categories
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table-success">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                                <a asp-action="Delete" onclick="return confirm('Are you sure?')"
                                    asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a> |
                                @if(User.IsInRole("Admin")){
                                <a asp-action="SetCategory" asp-route-id="@item.Id"><i class="fas fa-cogs"></i></a>
                                }
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
